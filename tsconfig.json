{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": ["src/core/*"],
            "@events/*": ["src/events/*"],
            "@interactions/*": ["src/interactions/*"],
            "@services/*": ["src/services/*"],
            "@utilities/*": ["src/utilities/*"],
            "@validation/*": ["src/validation/*"],
            "@config/*": ["config/*"],
            "@interfaces/*": [
                "src/core/_interfaces/*",
                "src/events/_interfaces/*",
                "src/interactions/_interfaces/*",
                "src/services/_interfaces/*",
                "src/utilities/_interfaces/*",
                "src/validation/_interfaces/*"
            ]
        }
    },
    "include": ["src/**/*.ts", "locales/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
