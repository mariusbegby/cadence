{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": ["src/core/*"],
            "@events/*": ["src/events/*"],
            "@interactions/*": ["src/interactions/*"],
            "@services/*": ["src/services/*"],
            "@utilities/*": ["src/utilities/*"],
            "@validation/*": ["src/validation/*"],
            "@config/*": ["config/*"],
            "@type/*": [
                "src/core/_types/*",
                "src/events/_types/*",
                "src/interactions/_types/*",
                "src/services/_types/*",
                "src/utilities/_types/*",
                "src/validation/_types/*"
            ],
            "@mocks/*": ["src/__tests__/_mocks/*"]
        }
    },
    "include": ["src/**/*.ts", "locales/**/*.ts", "src/globals.d.ts"],
    "exclude": ["node_modules", "dist"]
}
